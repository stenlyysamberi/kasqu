<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BerandaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/tolbar"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/tx1"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:textSize="30dp"
                android:text="Kasqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

<!--                <ImageView-->
<!--                    android:layout_marginRight="12dp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:src="@drawable/icon_cari"-->
<!--                    app:tint="@color/dark" />-->

                <ImageView
                    android:onClick="myAkun"
                    android:src="@drawable/icon_akun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/dark" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/purple_700"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/saldo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/icon_more"
                        android:drawableTint="@color/white"
                        android:text="Rp.0"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/saldo"
                        android:text="you have a money today"
                        android:textColor="@color/white" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_more"
                            android:drawableTint="@color/white"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_more"
                            android:drawableTint="@color/white"
                            android:padding="12dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:text="1996"
                            android:textColor="@color/white" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/logo" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_marginTop="12dp"
                android:columnCount="2"
                android:rowCount="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:onClick="mutasi_user"
                    android:layout_marginRight="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/isi_saldo"
                        android:layout_margin="1dp"
                        app:cardBackgroundColor="@color/orange"
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="15dp"
                                android:gravity="center_vertical"
                                android:id="@+id/login_google"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawablePadding="12dp"
                                android:drawableTint="@color/purple_700"
                                android:drawableLeft="@drawable/round_history_toggle_off_24"
                                android:text="History"
                                android:textColor="@color/purple_700"
                                 />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </FrameLayout>

                <FrameLayout
                    android:layout_marginLeft="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <androidx.cardview.widget.CardView
                        android:onClick="buys"
                        android:layout_margin="1dp"
                        app:cardBackgroundColor="@color/hijau_muda"
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="15dp"
                                android:gravity="center_vertical"
                                android:drawableTint="@color/purple_700"
                                android:textColor="@color/purple_700"
                                android:drawableLeft="@drawable/ic_round_attach_money_24"
                                android:drawablePadding="12dp"
                                android:layout_centerVertical="true"
                                android:text="Buys"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </FrameLayout>


            </GridLayout>


            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_shape_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:text="Transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                            <androidx.recyclerview.widget.RecyclerView
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_service"
                                android:layout_marginTop="12dp"
                                android:id="@+id/recy_mitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <androidx.cardview.widget.CardView
                           android:onClick="income"
                            android:background="@color/transparant"
                            android:layout_marginTop="12dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginLeft="50dp"
                                android:padding="12dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableTint="@color/purple_700"
                                    android:gravity="center_vertical"
                                    android:text="Receive"
                                    android:textColor="@color/purple_700"
                                    android:textStyle="bold" />

                                <TextView
                                    android:textColor="@color/dark"
                                    android:text="show you the ‘total receive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/bg_receive"
                                android:padding="12dp"
                                android:layout_gravity="left|center_vertical"
                                android:drawableTint="@color/white"
                                android:drawableLeft="@drawable/round_call_received_24"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView

                                android:drawableTint="@color/purple_700"
                                android:layout_marginRight="12dp"
                                android:layout_gravity="right|center_vertical"
                                android:drawableRight="@drawable/ic_round_keyboard_arrow_down_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:onClick="spent"
                    android:background="@color/transparant"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="50dp"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:drawableTint="@color/purple_700"
                            android:gravity="center_vertical"
                            android:textColor="@color/purple_700"
                            android:textStyle="bold"
                            android:text="Send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="@color/dark"
                            android:text="show you the ‘total send’"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView

                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_send"
                        android:padding="12dp"
                        android:layout_gravity="left|center_vertical"
                        android:drawableTint="@color/white"
                        android:drawableLeft="@drawable/round_trending_up_24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <TextView

                        android:drawableTint="@color/purple_700"
                        android:layout_marginRight="12dp"
                        android:layout_gravity="right|center_vertical"
                        android:drawableRight="@drawable/ic_round_keyboard_arrow_down_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_calender"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="12dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Todays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <CalendarView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>
