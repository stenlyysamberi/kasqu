<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.ProfilActivity">

    <TextView
        android:id="@+id/thely"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/purple_700"
        android:padding="12dp"
        android:text="Profilku"
        android:textColor="@color/purple_700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thely"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/img_profil"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama_saya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stenly Samberi"
                        android:textColor="@color/purple_700"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:drawableTint="@color/purple_700"
                        android:drawableRight="@drawable/round_mode_edit_24"
                        android:id="@+id/hp_saya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+6281224452338"
                        android:textColor="@color/purple_700" />

                    <TextView
                        android:id="@+id/alamat_saya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="stenly.samberi@outlook.co.id"
                        android:textColor="@color/purple_700" />

                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white_Dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akun"
                    android:textColor="@color/dark"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/tampil_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/round_qr_code_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Tampilkan QR Code"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/bahasa_round_public_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Pilih Bahasa"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_smart_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:drawableLeft="@drawable/round_fingerprint_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/purple_700"
                        android:text="Smart login"
                        android:textColor="@color/purple_700"
                        android:textSize="15dp" />

                    <Switch
                        android:id="@+id/biometrik_aktiv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/round_bug_report_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Bantuan dan Laporan Saya "
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/round_bookmark_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Disimpan"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Info lainnya"
                    android:textColor="@color/dark"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/round_verified_user_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Kebijakan Privasi"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/round_info_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Ketentuan Layanan"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/round_star_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Beri rating"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

        <RelativeLayout
            android:onClick="logout"
            android:layout_margin="12dp"
            android:background="@drawable/bg_shape_red"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="Keluar"
                android:textColor="@color/purple_700" />

        </RelativeLayout>

