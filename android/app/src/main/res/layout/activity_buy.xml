<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.BuyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_banner_circle" />

    <LinearLayout

        android:layout_margin="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/j"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:onClick="back"
                android:drawableTint="@color/purple_700"
                android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                android:drawablePadding="12dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:text="Send Fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/lyt_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@color/dark" />

        <EditText
            android:id="@+id/jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparant"
            android:hint="Rp0"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/dark"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/purple_700"
            android:text=""
            android:onClick="select_mitra"
            android:drawableTint="@color/dark"
            android:background="@color/transparant"
            android:id="@+id/nama_mitra"
            android:drawableRight="@drawable/ic_round_keyboard_arrow_down_24"
            android:hint="SELECT TEXT"
            android:textColorHint="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/satu"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dua"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tiga"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/empat"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lima"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/enam"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tujuh"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/delapan"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sembilan"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/kosong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/purple_700"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:text="000"
                android:textColor="@color/purple_700"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                android:drawableTint="@color/purple_700"
                android:text=""
                android:textColor="@color/purple_700"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:onClick="konfirm"
            android:id="@+id/btn_nominal_lanjut"
            android:layout_margin="12dp"
            app:cardCornerRadius="120dp"
            app:cardBackgroundColor="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:padding="12dp"
                android:text="Confirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>