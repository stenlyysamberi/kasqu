<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sheet_mutasi"
    android:background="@drawable/bg_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:background="@color/dark"
            android:layout_width="30dp"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/purple_700"
            android:text="Pilih Tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTint="@color/purple_200"
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/card_icon"
                android:drawableLeft="@drawable/ic_round_date_range_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/card_icon"
                android:id="@+id/pilih_rekening"
                android:textColor="@color/dark"
                android:textSize="12dp"
                android:text="Tanggal Awal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_jenis_mutasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pilih_rekening"
                android:layout_toRightOf="@+id/card_icon"
                android:background="@color/transparant"
                android:drawableRight="@drawable/ic_round_keyboard_arrow_down_24"
                android:drawableTint="@color/purple_200"
                android:hint="Enter Text"
                android:padding="10dp"
                android:textColor="@color/purple_700"
                android:textColorHint="@color/dark"
                android:textSize="12dp" />

            <View
                android:layout_below="@+id/tv_jenis_mutasi"
                android:background="@color/dark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTint="@color/purple_200"
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/tgl_icon"
                android:drawableLeft="@drawable/ic_round_date_range_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/tgl_icon"
                android:id="@+id/pilih_TglAkhir"
                android:textColor="@color/dark"
                android:textSize="12dp"
                android:text="Tanggal Awal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableTint="@color/purple_200"
                android:drawableRight="@drawable/ic_round_keyboard_arrow_down_24"
                android:id="@+id/tv_tgl_akhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pilih_TglAkhir"
                android:layout_toRightOf="@+id/tgl_icon"
                android:background="@color/transparant"
                android:hint="Enter Text"
                android:padding="10dp"
                android:textColor="@color/purple_700"
                android:textColorHint="@color/dark"
                android:textSize="12dp" />

            <View
                android:layout_below="@+id/tv_tgl_akhir"
                android:background="@color/dark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:padding="12dp"
            android:id="@+id/daftar"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="center"
                android:padding="15dp"
                android:text="Simpan"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
